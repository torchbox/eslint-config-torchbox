  "license": "MIT",
  "author": "Torchbox Ltd",
  "repository": {
    "type": "git",
    "url": "https://github.com/torchbox/eslint-config-torchbox.git"
  },
  "bugs": {
    "url": "https://github.com/torchbox/eslint-config-torchbox/issues"
  },
  "homepage": "https://github.com/torchbox/eslint-config-torchbox",
  "keywords": [
    "eslint",
